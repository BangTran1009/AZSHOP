<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <decorator name="admin" page="admin-home.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="registerVendor" page="/decorators/web/registerVendor.jsp">
        <pattern>/vendor/register</pattern>
    </decorator>

    <decorator name="registerBuyer" page="/decorators/web/account.jsp">
        <pattern>/buyer/register</pattern>
    </decorator>

    <decorator name="vendor" page="vendor/vendor.jsp">
        <pattern>/vendor*</pattern>
    </decorator>

    <decorator name="home" page="user/user-home.jsp">
        <pattern>/home</pattern>
    </decorator>

    <decorator name="login" page="/decorators/web/account.jsp">
        <pattern>/user/*</pattern>
    </decorator>

    <decorator name="user" page="user/user.jsp">
        <pattern>/*</pattern>
    </decorator>

    <excludes>
        <pattern>/api*</pattern>
    </excludes>

    <decorator name="userRegister" page="/decorators/web/account.jsp">
        <pattern>/buyer/register</pattern>
    </decorator>
</decorators>